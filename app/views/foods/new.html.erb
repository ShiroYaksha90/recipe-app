<h1>Add Foods</h1>

<%= form_with model: @food, url: foods_url, method: :post do |form| %>
  <div>
    <div>
      <%= form.text_field :name, placeholder: 'Food'  %>
    </div>

    <div>
      <%= form.text_field :measurement_unit, placeholder: 'Measurement Unit'  %>
    </div>

     <div>
      <%= form.text_field :price, placeholder: 'Unit Price'  %>
    </div>

     <div>
      <%= form.number_field :quantity, placeholder: 'Quantity'  %>
    </div>

    <%= form.submit "Add Food" %>
  </div>
<% end %>